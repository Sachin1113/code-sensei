{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist",
        "rootDirectory": "client"
      }
    },
    {
      "src": "api/generate.js",
      "use": "@vercel/node",
      "config": {
         "includeFiles": ["api/**"],
         "installCommand": "npm install"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generate",
      "dest": "/api/generate",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ]
}